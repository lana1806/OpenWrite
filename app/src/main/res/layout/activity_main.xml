<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
<ImageView
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:src="@drawable/mugiwara"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:src="@drawable/ic_archive"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:id="@+id/lihatbt"
            android:textSize="25sp"
            android:textColor="#ffff"
            android:text="Lihat Data"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton2"
            android:src="@drawable/ic_add_box"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton2"
            android:id="@+id/unduhbt"
            android:textSize="25sp"
            android:textColor="#ffff"
            android:text="Input Data"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton3"
            android:src="@drawable/ic_info"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton3"
            android:id="@+id/info"
            android:textSize="25sp"
            android:textColor="#ffff"
            android:text="Info Data"/>
    </LinearLayout>
</LinearLayout>